@using BlazorAgenda.Client.Viewmodels;
@using BlazorAgenda.Shared.Models;
@inherits JobsViewModel

<div class="container" style="margin-top: 25px;">
    <h2>Jobs</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Job job in Jobs)
            {
                <tr onclick="@(() => EditJob(job))">
                    <td>@job.Name</td>
                    <td>@job.Description</td>
                    <td>@job.TimeModifier</td>
                </tr>
            }
        </tbody>
    </table>
    <button class="btn btn-primary" id="add-event-btn" onclick=@AddJob><span class="oi oi-plus"></span> Add job</button>
</div>
