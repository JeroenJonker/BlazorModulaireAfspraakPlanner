@using BlazorAgenda.Client.Viewmodels;
@using BlazorAgenda.Shared.Models;
@inherits OptionsViewModel

<div class="container" style="margin-top: 25px;">
    <h2>Options</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Text</th>
                <th>Description</th>
                <th>Mandatory</th>
                <th>Type</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Option option in Options)
            {
                <tr onclick="@(() => EditOption(option))" draggable="true" ondragstart="@(() => OnDragStart(option))" ondragover="event.preventDefault()" ondrop="@(() => OnDrop(option))">
                    <td>@option.Text</td>
                    <td>@option.Description</td>
                    <td>@option.IsMandatory</td>
                    <td>@option.ElementType</td>
                    <td>@option.TimeModifier</td>
                </tr>
            }
        </tbody>
    </table>
    <button class="btn btn-primary" id="add-event-btn" onclick="@AddOption"><span class="oi oi-plus"></span> Add option</button>
</div>