@using BlazorAgenda.Client.Viewmodels
@using BlazorAgenda.Shared.Models
@using BlazorAgenda.Shared.Enums
@inherits AppointmentViewModel
@page "/appointment"
@page "/appointment/{orgname}"

<form onsubmit="@SubmitEventOptions" class="container-fluid">
    <fieldset>
        @if (StateService.Organization is Organization) {
            <!-- Job -->
            <div class="form-row">
                <span class="col-sm-5">
                    <label class="col-form-label">Job</label>
                </span>
                <span class="col-sm-7 input-group">
                    <select bind="@Event.JobId" onchange="@SetEventJob" required>
                        <option value="" selected disabled hidden>-- Choose a job --</option>
                        @foreach (Job job in StateService.Organization.Job)
                        {
                            <option value="@job.Id">@job.Name</option>
                        }
                    </select>
                </span>
            </div>
            @if (Event.Job != null) {
                <!-- User -->
                <div class="form-row">
                    <span class="col-sm-5">
                        <label class="col-form-label">User</label>
                    </span>
                    <span class="col-sm-7 input-group">
                        <select bind="@Event.UserId" required>
                            <option value="" selected disabled hidden>-- Choose a user --</option>
                            @foreach (User user in StateService.Organization.User.Join(Event.Job.UserJob, u => u.Id, uj => uj.UserId, (u, uj) => u))
                            {
                                <option value="@user.Id">@user.Firstname @user.Lastname</option>
                            }
                        </select>
                    </span>
                </div>
            }
        }
        <button type="submit" value="Submit" />
    </fieldset>
</form>
